{
    "manifest_version": 3,
    "name": "React Vite Extension",
    "version": "1.0.0",
    "description": "Chrome extension built with React and Vite",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}